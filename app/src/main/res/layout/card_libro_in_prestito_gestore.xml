<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/card_viewUtenti"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:contentPadding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/copertina_libro"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_gravity="center" />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/isbn_libro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISBN"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/titolo_libro"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Titolo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/data_prestito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="data prestito"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right|center_horizontal">

            <ImageButton
                android:id="@+id/btn_reso_prestito"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_avanti_40x40" />
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
